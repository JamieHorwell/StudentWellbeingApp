<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="team10.studentwellbeingapp" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar" >
        <activity
            android:name=".SplashScreen"
            android:theme="@style/SplashScreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainMenuActivity" />
        <activity
            android:name=".ButtonOneActivity"
            android:parentActivityName=".MainMenuActivity" >
        </activity>
        <activity
            android:name=".MoodDiaryMenuActivity"
            android:parentActivityName=".MainMenuActivity" >
        </activity>
        <activity
            android:name=".ButtonThreeActivity"
            android:parentActivityName=".MainMenuActivity" >
        </activity>
        <activity
            android:name=".BookingAppointmentActivity"
            android:label="@string/title_activity_booking_appointment"
            android:parentActivityName=".MainMenuActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainMenuActivity" />
        </activity>
        <activity
            android:name=".LoginActivity"
            android:parentActivityName=".MainMenuActivity" >
        </activity>
        <activity
            android:name=".ButtonSevenActivity"
            android:parentActivityName=".MainMenuActivity" >
        </activity>
        <activity
            android:name=".RegistrationActivity"
            android:parentActivityName=".LoginActivity" >
        </activity>
        <activity android:name=".MoodDiaryEntryActivity" >
        </activity>
    </application>

</manifest>
