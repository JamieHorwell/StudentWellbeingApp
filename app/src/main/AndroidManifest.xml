<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="team10.studentwellbeingapp" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="team10.studentwellbeingapp.permission.RECEIVE" />
    <permission android:name="team10.studentwellbeingapp.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />
    <uses-permission android:name="team10.studentwellbeingapp.gcm.permission.C2D_MESSAGE" />



    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar" >

        <receiver
            android:name="com.google.android.gms.gcm.GcmReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <category android:name="team10.studentwellbeingapp.gcm" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />
            </intent-filter>
        </receiver>
        <service
            android:name="team10.studentwellbeingapp.MyGcmListenerService"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            </intent-filter>
        </service>
        <service
            android:name="team10.studentwellbeingapp.MyInstanceIDListenerService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.gms.iid.InstanceID" />
            </intent-filter>
        </service>


        <activity
            android:name=".SplashScreen"
            android:theme="@style/SplashScreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MainMenuActivity" />

        <activity
            android:name=".ButtonOneActivity"
            android:parentActivityName=".MainMenuActivity" >
        </activity>

        <activity
            android:name=".ButtonTwoActivity"
            android:parentActivityName=".MainMenuActivity" >
        </activity>

        <activity
            android:name=".ButtonThreeActivity"
            android:parentActivityName=".MainMenuActivity" >
        </activity>

        <activity
            android:name=".ButtonFourActivity"
            android:parentActivityName=".MainMenuActivity" >
        </activity>

        <activity
            android:name=".BookingAppointmentActivity"
            android:label="@string/title_activity_booking_appointment"
            android:parentActivityName=".MainMenuActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainMenuActivity" />
        </activity>

        <activity
            android:name=".ButtonSixActivity"
            android:parentActivityName=".MainMenuActivity" >
        </activity>

        <activity
            android:name=".ButtonSevenActivity"
            android:parentActivityName=".MainMenuActivity" >
        </activity>

        <activity
            android:name=".ButtonEightActivity"
            android:parentActivityName=".MainMenuActivity" >
        </activity>
    </application>

</manifest>
