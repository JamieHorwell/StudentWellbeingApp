<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/BookingLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="team10.studentwellbeingapp.BookingAppointmentActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/wellbeing_white">


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/wellbeing_dark_purple"
        android:elevation="@dimen/toolbar_elevation"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:id="@+id/BookingAppointmentToolbar"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        android:contentInsetStart="0dp"
        android:contentInsetLeft="0dp"
        android:layout_gravity="center">

        <ImageButton
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="left"
            android:padding="5dp"
            android:onClick="backButtonClick"
            android:id="@+id/backButton"
            android:scaleType="fitCenter"
            android:background="@color/mood_diary_teal"
            android:src="@drawable/previous_button" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Book appointment"
            android:textSize="@dimen/toolbar_text_size"
            android:padding="@dimen/toolbar_padding"
            android:textColor="@color/wellbeing_white"/>

    </android.support.v7.widget.Toolbar>
    </LinearLayout>

    <ListView
        android:id="@+id/appointmentListView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:divider="@android:color/transparent"
        android:dividerHeight="20dp">

    </ListView>

    <TextView android:id="@+id/emptyElement"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="No Results"
        android:textSize="@dimen/toolbar_text_size"
        android:padding="@dimen/toolbar_padding"
        android:textColor="@color/wellbeing_dark_purple"/>





</LinearLayout>
