<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/BookingLayout"
    tools:context="team10.studentwellbeingapp.BookingAppointmentActivity">





    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/wellbeing_dark_purple"
        android:elevation="@dimen/toolbar_elevation"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:id="@+id/BookingAppointmentToolbar"
        android:layout_gravity="center">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Book appointment"
            android:textSize="@dimen/toolbar_text_size"
            android:padding="@dimen/toolbar_padding"
            android:textColor="@color/wellbeing_white"/>

    </android.support.v7.widget.Toolbar>
    <ListView
        android:id="@+id/appointmentListView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:divider="@android:color/transparent"
        android:dividerHeight="10dp">

    </ListView>





</LinearLayout>
