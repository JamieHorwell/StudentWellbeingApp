<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/wellbeing_white">

    <!-- Allows for the following child to be scrolled -->
    <ScrollView
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/wellbeing_dark_purple"
            android:weightSum="1">

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/wellbeing_dark_purple"
                android:elevation="@dimen/toolbar_elevation"
                android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                android:layout_gravity="center"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                android:contentInsetStart="0dp"
                android:contentInsetLeft="0dp">

                <ImageButton
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_gravity="left"
                    android:onClick="onStudentOfficersBackButtonClick"
                    android:id="@+id/contentStudentOfficersBackButton"
                    android:src="@drawable/back_button" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Student Officers"
                    android:textSize="@dimen/toolbar_text_size"
                    android:padding="@dimen/toolbar_padding"
                    android:textColor="@color/wellbeing_white"/>
            </android.support.v7.widget.Toolbar>

            <LinearLayout android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/full_generic_padding"
                android:background="@color/wellbeing_white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/subtitle_text_size"
                    android:textColor="@color/wellbeing_light_purple"
                    android:paddingBottom="@dimen/half_generic_padding"

                    android:text="Welfare and Equality Officer"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingMultiplier="1.5"
                    android:textColor="#000000"
                    android:paddingBottom="@dimen/full_generic_padding"
                    android:textSize="@dimen/content_text_size"

                    android:text="Luke Allison is currently the NUSU Welfare and Equality officer. His role is to offer guidance to students on where to seek welfare support, including mental health, as well as running campaigns throughout the year. "/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/content_text_size"
                    android:textColor="@color/wellbeing_light_purple"
                    android:paddingBottom="@dimen/half_generic_padding"

                    android:text="Contact and links"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/full_generic_padding"
                    android:paddingBottom="@dimen/half_generic_padding"
                    android:autoLink="web"
                    android:textColorLink="@color/wellbeing_dark_purple"
                    android:textSize="@dimen/content_text_size"

                    android:text="http://www.nusu.co.uk/yourvoice/officers/welfare/"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/full_generic_padding"
                    android:paddingBottom="@dimen/half_generic_padding"
                    android:autoLink="email"
                    android:textColorLink="@color/wellbeing_dark_purple"
                    android:textSize="@dimen/content_text_size"

                    android:text="welfare.union@ncl.ac.uk"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/full_generic_padding"
                    android:paddingBottom="@dimen/half_generic_padding"
                    android:autoLink="web"
                    android:textColorLink="@color/wellbeing_dark_purple"
                    android:textSize="@dimen/content_text_size"

                    android:text="https://www.facebook.com/NUSUWelfare/"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/full_generic_padding"
                    android:paddingBottom="@dimen/full_generic_padding"
                    android:autoLink="web"
                    android:textColorLink="@color/wellbeing_dark_purple"
                    android:textSize="@dimen/content_text_size"

                    android:text="https://twitter.com/NUSUwelfare"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/subtitle_text_size"
                    android:textColor="@color/wellbeing_light_purple"
                    android:paddingBottom="@dimen/half_generic_padding"

                    android:text="Students with Disabilities Officer"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingMultiplier="1.5"
                    android:textColor="#000000"
                    android:paddingBottom="@dimen/half_generic_padding"
                    android:textSize="@dimen/content_text_size"

                    android:text="Rosie Foster and Olivia Bucknall are part-time officers of the Studentsâ€™ Union whose main role is to represent students who have disabilities."/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/full_generic_padding"
                    android:textColor="#000000"
                    android:textSize="@dimen/content_text_size"

                    android:text="Email: "/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/full_generic_padding"
                    android:paddingBottom="@dimen/half_generic_padding"
                    android:autoLink="email"
                    android:textColorLink="@color/wellbeing_dark_purple"
                    android:textSize="@dimen/content_text_size"

                    android:text="SWD.union@ncl.ac.uk"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>