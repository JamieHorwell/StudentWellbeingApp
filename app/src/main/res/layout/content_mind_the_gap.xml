<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/wellbeing_white">

    <!-- Allows for the following child to be scrolled -->
    <ScrollView
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/wellbeing_dark_purple"
            android:weightSum="1">

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/wellbeing_dark_purple"
                android:elevation="@dimen/toolbar_elevation"
                android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                android:layout_gravity="center"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                android:contentInsetStart="0dp"
                android:contentInsetLeft="0dp">

                <ImageButton
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_gravity="left"
                    android:onClick="onMindTheGapBackButtonClick"
                    android:id="@+id/contentMindTheGapBackButton"
                    android:src="@drawable/back_button" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="NUSU Mind the Gap"
                    android:textSize="@dimen/toolbar_text_size"
                    android:padding="@dimen/toolbar_padding"
                    android:textColor="@color/wellbeing_white"/>
            </android.support.v7.widget.Toolbar>

            <LinearLayout android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/full_generic_padding"
                android:background="@color/wellbeing_white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/subtitle_text_size"
                    android:textColor="@color/wellbeing_light_purple"
                    android:paddingBottom="@dimen/half_generic_padding"

                    android:text="NUSU's Mind the Gap Society"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingMultiplier="1.5"
                    android:textColor="#000000"
                    android:paddingBottom="@dimen/half_generic_padding"
                    android:textSize="@dimen/content_text_size"

                    android:text="Mind the Gap is the Students’ Union mental health society, run by students for students. The aim of the society is to raise awareness of issues facing mental health sufferers by working with students, the local community, and mental health charities."/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingMultiplier="1.5"
                    android:textColor="#000000"
                    android:paddingBottom="@dimen/half_generic_padding"
                    android:textSize="@dimen/content_text_size"

                    android:text="Mind the Gap is also a social society, allowing sufferers of mental health illnesses to hang out with like-minded people in safe spaces. The society also runs discussions on different topics, and is a supportive society allowing those with mental health issues to talk freely with one another."/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingMultiplier="1.5"
                    android:textColor="#000000"
                    android:paddingBottom="@dimen/half_generic_padding"
                    android:textSize="@dimen/content_text_size"

                    android:text="Mind the Gap also runs an annual conference, which aims to question people’s everyday thinking of mental health and instigate why it is still a taboo subject. "/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/content_text_size"
                    android:textColor="@color/wellbeing_light_purple"
                    android:paddingBottom="@dimen/half_generic_padding"

                    android:text="Links and contacts"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/full_generic_padding"
                    android:paddingBottom="@dimen/half_generic_padding"
                    android:autoLink="email"
                    android:textColorLink="@color/wellbeing_dark_purple"
                    android:textSize="@dimen/content_text_size"

                    android:text="mindthegap@newcastle.ac.uk"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/full_generic_padding"
                    android:paddingBottom="@dimen/half_generic_padding"
                    android:autoLink="web"
                    android:textColorLink="@color/wellbeing_dark_purple"
                    android:textSize="@dimen/content_text_size"

                    android:text="https://www.facebook.com/NUSUMindtheGap"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/full_generic_padding"
                    android:paddingBottom="@dimen/half_generic_padding"
                    android:autoLink="web"
                    android:textColorLink="@color/wellbeing_dark_purple"
                    android:textSize="@dimen/content_text_size"

                    android:text="https://www.facebook.com/groups/NUSUMindtheGap/"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/full_generic_padding"
                    android:paddingBottom="@dimen/half_generic_padding"
                    android:autoLink="web"
                    android:textColorLink="@color/wellbeing_dark_purple"
                    android:textSize="@dimen/content_text_size"

                    android:text="http://nusumindthegap.tumblr.com/"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/full_generic_padding"
                    android:paddingBottom="@dimen/half_generic_padding"
                    android:autoLink="web"
                    android:textColorLink="@color/wellbeing_dark_purple"
                    android:textSize="@dimen/content_text_size"

                    android:text="https://twitter.com/nusumindthegap"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/full_generic_padding"
                    android:paddingBottom="@dimen/half_generic_padding"
                    android:autoLink="web"
                    android:textColorLink="@color/wellbeing_dark_purple"
                    android:textSize="@dimen/content_text_size"

                    android:text="https://www.youtube.com/user/NUSUMindtheGap"/>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>